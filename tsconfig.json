{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "target": "es2015",
    "module": "ESNext",
    "lib": ["dom", "es2015"],
    "moduleResolution": "node",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true
  }
}